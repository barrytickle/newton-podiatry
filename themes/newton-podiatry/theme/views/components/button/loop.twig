{% for item in buttons %}
    <div class="mr-4">
        {% set button = item.button %}
        {% if button.style == 'solid' %}
            {% include './components/button/solid.twig' with {text: button.text, url: button.url.url, size: size ?? null} %}
        {% else %}
            {% include './components/button/arrow.twig' with {text: button.text, url: button.url.url, size: size ?? null} %}
        {% endif %}
    </div>
{% endfor %}