<section data-block="text-and-form" class="container mx-auto">
    <div class="flex flex-col md:flex-row space-between">
        <div class="flex flex-col mb-6 md:mb-0 md:pr-20 md:w-1/2 w-full">
            <p class="!max-w-[600px]">
                {{fields.form_text|nl2br}}
            </p>
            <div class="flex items-center ">
                <span class="flex items-center text-base">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24.995" height="25" viewBox="0 0 24.995 25">
                        <path id="Path_2" data-name="Path 2" d="M18.346,13.446a1.952,1.952,0,0,0-2.28.557l-1.621,1.982a14.968,14.968,0,0,1-5.424-5.424L11,8.945a1.945,1.945,0,0,0,.557-2.28L9.212,1.2A1.949,1.949,0,0,0,7.011.055L1.543,1.226A1.95,1.95,0,0,0,0,3.135H0A21.877,21.877,0,0,0,19.533,24.884c.478.049.957.088,1.445.107h0c.3.01.591.02.889.02h0a1.95,1.95,0,0,0,1.909-1.543L24.952,18a1.949,1.949,0,0,0-1.142-2.2l-5.468-2.343Zm3.207,9.217A19.533,19.533,0,0,1,2.348,3.452l4.843-1.04,2.1,4.9L7.538,8.749A2.343,2.343,0,0,0,7,11.737a17.281,17.281,0,0,0,6.278,6.278,2.343,2.343,0,0,0,2.988-.542L17.7,15.721l4.9,2.1ZM2.343,3.135Z" transform="translate(0 -0.011)" fill="#0054a2"/>
                    </svg>
                    <a href="tel:{{ option.phone_number|replace({' ': ''}) }}" class="ml-4 hover:underline">{{ option.phone_number }}</a>
                </span>

                <span class="flex items-center lg:mb-0 lg:ml-10 text-base">
                    <svg xmlns="http://www.w3.org/2000/svg" width="26.667" height="20" viewBox="0 0 26.667 20">
                        <path id="Path_3" data-name="Path 3" d="M3.333,81.5a.836.836,0,0,1-.833-.833V79.516l8.984-7.375a2.913,2.913,0,0,1,3.7,0l8.979,7.375v1.151a.836.836,0,0,1-.833.833ZM2.5,76.281V67.333a.836.836,0,0,1,.833-.833h20a.836.836,0,0,1,.833.833v8.948l-7.4-6.073a5.417,5.417,0,0,0-6.875,0ZM0,80.667A3.336,3.336,0,0,0,3.333,84h20a3.336,3.336,0,0,0,3.333-3.333V67.333A3.336,3.336,0,0,0,23.333,64h-20A3.336,3.336,0,0,0,0,67.333Z" transform="translate(26.667 84) rotate(180)" fill="#0054a2"/>
                    </svg>
                    <a href="mailto:{{option.email_address}}" class="ml-4 hover:underline">
                        {{option.email_address}}
                    </a>
                </span>
            </div>
        </div>
        <div class="flex flex-col md:w-1/2 w-full">
            <form class="flex flex-col w-full" action="{{option.contact_form_url != '' and option.contact_form_url is defined ? option.contact_form_url : '#' }}">
                <label class="flex flex-col">
                    <span class="mb-2">Full Name <span class="text-red-500">*</span></span>
                    <input type="text" name="full-name" class="mb-4 bg-brand-blue-light py-3 px-4 rounded-md" required>
                </label>
                <label class="flex flex-col">
                    <span class="mb-2">Email Address <span class="text-red-500">*</span></span>
                    <input type="email" name="email-address" class="mb-4 bg-brand-blue-light py-3 px-4 rounded-md" required>
                </label>
                <label class="flex flex-col">
                    <span class="mb-2">Phone Number</span>
                    <input type="tel" name="phone-number" class="mb-4 bg-brand-blue-light py-3 px-4 rounded-md">
                </label>
                <label class="flex flex-col">
                    <span class="mb-2">Message</span>
                    <textarea class="mb-4 min-h-[250px] bg-brand-blue-light py-3 px-4 rounded-md"></textarea>
                </label>

                
                <button class="bg-brand-blue text-white py-2 px-4">Submit</button>
            </div>
        </div>
    </div>  
</section>